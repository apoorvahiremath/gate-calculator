<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gatehelpline.apoorva.myapplication.myapplication.Instructions">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:layout_gravity="center_horizontal"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="#FF029789"
        android:shadowRadius="3"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowColor="#FF000000"
        android:padding="3dp"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/para1"
        android:textSize="16dp"
        android:padding="3dp"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do's"
        android:textStyle="bold"
        android:textSize="22dp"
        android:padding="3dp"
        android:textColor="#FF029789"
        android:shadowRadius="3"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowColor="#FF000000"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dos"
        android:textSize="16dp"
        android:padding="3dp"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dont's"
        android:textStyle="bold"
        android:textSize="22dp"
        android:padding="3dp"
        android:textColor="#FF029789"
        android:shadowRadius="3"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowColor="#FF000000"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dont"
        android:textSize="16dp"
        android:padding="3dp"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limitations"
        android:textStyle="bold"
        android:textSize="22dp"
        android:padding="3dp"
        android:textColor="#FF029789"
        android:shadowRadius="3"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowColor="#FF000000"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/limitation"
        android:textSize="16dp"
        android:padding="3dp"
        android:fontFamily="serif"/>

</LinearLayout>
</ScrollView>
