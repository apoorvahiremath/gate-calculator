<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#FF9C9C9C" />
            <gradient android:angle="-90" android:startColor="#FFdedcdc"
                android:endColor="#FF9C9C9C" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#FF9C9C9C" />
            <solid android:color="#FFdedcdc"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#FFdedcdc" />
            <gradient android:angle="-90" android:startColor="#FF9C9C9C"
                android:endColor="#FFdedcdc"  />
        </shape>

    </item>
</selector>