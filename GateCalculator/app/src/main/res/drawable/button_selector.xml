<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#0f6933" />
            <gradient android:angle="-90" android:startColor="#119b48"
                android:endColor="#0f6933" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#0f6933" />
            <solid android:color="#119b48"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#119b48" />
            <gradient android:angle="-90" android:startColor="#0f6933"
                android:endColor="#119b48"  />
        </shape>
    </item>

</selector>